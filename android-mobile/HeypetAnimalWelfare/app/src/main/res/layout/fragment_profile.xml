<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".view.main.fragments.profile.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_hor_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.27"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/gl_hor_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile_picture"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/cd_profile_image"
                android:src="@drawable/profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_profile_name"
                style="@style/Text.Medium"
                android:layout_marginStart="32dp"
                android:text="@string/profile_name"
                app:layout_constraintStart_toEndOf="@id/img_profile_picture"
                app:layout_constraintTop_toTopOf="@id/img_profile_picture" />

            <TextView
                android:id="@+id/tv_profile_posts"
                style="@style/Text.Light"
                android:text="@string/posts"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_profile_picture"
                app:layout_constraintStart_toStartOf="@id/tv_profile_name" />

            <TextView
                android:id="@+id/tv_posts_number"
                style="@style/Text.Medium"
                android:layout_marginBottom="2dp"
                android:text="@string/_20"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tv_profile_posts"
                app:layout_constraintEnd_toEndOf="@id/tv_profile_posts"
                app:layout_constraintStart_toStartOf="@id/tv_profile_posts" />

            <TextView
                android:id="@+id/tv_profile_followers"
                style="@style/Text.Light"
                android:layout_marginStart="16dp"
                android:text="@string/followers"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_profile_posts"
                app:layout_constraintStart_toEndOf="@id/tv_profile_posts"
                app:layout_constraintTop_toTopOf="@id/tv_profile_posts" />

            <TextView
                android:id="@+id/tv_followers_number"
                style="@style/Text.Medium"
                android:layout_marginBottom="2dp"
                android:text="@string/_20"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tv_profile_followers"
                app:layout_constraintEnd_toEndOf="@id/tv_profile_followers"
                app:layout_constraintStart_toStartOf="@id/tv_profile_followers" />

            <TextView
                android:id="@+id/tv_profile_following"
                style="@style/Text.Light"
                android:layout_marginStart="16dp"
                android:text="@string/following"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_profile_posts"
                app:layout_constraintStart_toEndOf="@id/tv_profile_followers"
                app:layout_constraintTop_toTopOf="@id/tv_profile_posts" />

            <TextView
                android:id="@+id/tv_following_number"
                style="@style/Text.Medium"
                android:layout_marginBottom="2dp"
                android:text="@string/_20"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/tv_profile_following"
                app:layout_constraintEnd_toEndOf="@id/tv_profile_following"
                app:layout_constraintStart_toStartOf="@id/tv_profile_following" />

            <TextView
                android:id="@+id/tv_profile_bio"
                style="@style/Text"
                android:layout_marginTop="4dp"
                android:text="@string/profile_fullname"
                android:textColor="@color/grey_dark_description"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/tv_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

            <ImageView
                android:id="@+id/img_pet_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/cd_pet_type"
                android:src="@drawable/icon_cat"
                app:layout_constraintStart_toStartOf="@id/tv_profile_bio"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_bio" />

            <TextView
                android:id="@+id/tv_pet_name"
                style="@style/Text.Medium.PetDetails"
                android:layout_marginStart="12dp"
                android:text="@string/pet_name"
                app:layout_constraintBottom_toBottomOf="@id/img_pet_type"
                app:layout_constraintStart_toEndOf="@id/img_pet_type"
                app:layout_constraintTop_toTopOf="@id/img_pet_type"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_pet_dash"
                style="@style/Text.Medium.PetDetails"
                android:text="@string/pet_dash"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_pet_type"
                app:layout_constraintStart_toEndOf="@id/tv_pet_name"
                app:layout_constraintTop_toTopOf="@id/img_pet_type" />

            <TextView
                android:id="@+id/tv_pet_breed"
                style="@style/Text.Medium.PetDetails"
                android:text="@string/pet_breed"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_pet_type"
                app:layout_constraintStart_toEndOf="@id/tv_pet_dash"
                app:layout_constraintTop_toTopOf="@id/img_pet_type" />

            <TextView
                android:id="@+id/tv_pet_description"
                style="@style/Text.Medium.PetDetails"
                android:layout_width="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:maxLines="2"
                android:text="@string/lorem_ipsum"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/img_pet_type"
                app:layout_constraintTop_toBottomOf="@id/img_pet_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profile_posts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_profile_details"
        tools:listitem="@layout/item_profile_post" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_profile_details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>