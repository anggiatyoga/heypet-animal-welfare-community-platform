<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".view.main.fragments.reminder.ReminderFragment">

    <LinearLayout
        android:id="@+id/ll_reminder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_square"
        android:paddingVertical="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:contentDescription="@string/cd_reminder_image"
            android:src="@drawable/figure_reminder" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reminder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_reminder_title"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_reminder" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reminder_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/blue_primary"
        android:contentDescription="@string/cd_add_reminder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reminder_add_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/blue_light_background"
        android:contentDescription="@string/cd_add_once"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_reminder_add"
        app:layout_constraintEnd_toEndOf="@+id/fab_reminder_add"
        app:layout_constraintStart_toStartOf="@+id/fab_reminder_add"
        app:srcCompat="@drawable/ic_alarm" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reminder_add_repeating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/blue_light_background"
        android:contentDescription="@string/cd_add_repeating"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_reminder_add_one"
        app:layout_constraintEnd_toEndOf="@+id/fab_reminder_add_one"
        app:layout_constraintStart_toStartOf="@+id/fab_reminder_add_one"
        app:srcCompat="@drawable/ic_repeat_event" />

</androidx.constraintlayout.widget.ConstraintLayout>