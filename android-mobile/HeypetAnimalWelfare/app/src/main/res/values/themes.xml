<resources>
    <!-- Base application theme. -->
    <style name="Theme.HeypetAnimalWelfare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar"/>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue_dark_text_title</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium">
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Medium.PetDetails">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey_pale_pet_details</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Text.Light">
        <item name="fontFamily">@font/lexend_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlternativeLoginButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
    </style>

</resources>